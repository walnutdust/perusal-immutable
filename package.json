{
  "name": "perusal-immutable",
  "version": "0.0.0beta1.4",
  "description": "perusal-immutable seeks to implement a specification system for Javascript.",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "scripts": {
    "docs": "typedoc --theme ./node_modules/typedoc-neo-theme/bin/default src",
    "test": "mocha -c -r ts-node/register,@babel/register --reporter dot 'tests/**/*.test.js'",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:cjs && npm run build:es",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cjs": "NODE_ENV=cjs babel src --extensions \".ts,.tsx\" --out-dir cjs",
    "build:es": "NODE_ENV=es babel src  --extensions \".ts,.tsx\" --out-dir es"
  },
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walnutdust/perusal-immutable.git"
  },
  "keywords": [],
  "author": {
    "name": "Garett Tok Ern Liang",
    "url": "https://github.com/walnutdust"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/walnutdust/perusal-immutable/issues"
  },
  "homepage": "https://github.com/walnutdust/perusal-immutable#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/register": "^7.7.0",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "braintree-jsdoc-template": "^3.3.0",
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-plugin-mocha": "^6.2.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typedoc-neo-theme": "^1.0.4",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "tiny-invariant": "^1.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "./node_modules/.bin/eslint --ext .ts --ignore-path .gitignore --fix",
      "pretty-quick --staged",
      "yarn docs",
      "git add"
    ]
  }
}
